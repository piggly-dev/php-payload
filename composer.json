{
    "name": "piggly/php-payload",
    "description": "A simple payload data manager.",
    "keywords": [
        "piggly",
        "payload",
        "attributes",
        "data", 
        "fields"
    ],
    "type": "library",
    "homepage": "https://github.com/piggly-dev/php-payload",
    "autoload": {
        "psr-4": {
            "Piggly\\Payload\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Piggly\\Dev\\Payload\\": "tests/src/"
        }
    },
    "require": {
        "php": "^7.3 || ^8.0",
        "respect/validation": "^2.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "test": "phpunit"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Caique Araujo",
            "email": "caique@piggly.com.br",
            "homepage": "https://github.com/caiquearaujo",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable"
}
